@{
  ViewData["Title"] = "Register";
  Layout = "_Layout";
}
@using Pierre.ViewModels
@model RegisterViewModel

<h2>Register a new user</h2>
<hr />

@if (!ViewData.ModelState.IsValid)
{
  @Html.ValidationSummary("Please fix the following error(s) and try again:")
}
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  @Html.LabelFor(user => user.NickName)
  @Html.TextBoxFor(user => user.NickName)
  <br />
  @Html.LabelFor(user => user.Image)
  @Html.TextBoxFor(user => user.Image)
  <br />
  @Html.LabelFor(user => user.Birthday)
  @Html.EditorFor(user => user.Birthday, new
    { htmlAttributes = new { @type = "date" } })
  <br />
  @Html.LabelFor(user => user.Email)
  @Html.TextBoxFor(user => user.Email)
  <br />
  @Html.LabelFor(user => user.Password)
  @Html.EditorFor(user => user.Password)
  <br />
  @Html.LabelFor(user => user.ConfirmPassword)
  @Html.EditorFor(user => user.ConfirmPassword)
  <br />
  <input type="submit" value="sign up" class="button-55" />
}
<p class="button-55">@Html.ActionLink("Back to accounts page", "Index")</p>