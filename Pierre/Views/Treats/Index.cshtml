@{
  ViewData["Title"] = "Treats";
  Layout = "_Layout";
}
@using Pierre.Models;

<h1>Treats Index Page</h1>
@if (@Model.Count == 0)
{
  <h3>No treats are for sale at this time...</h3>
}
else
{
  <ul>
  @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId }) </li>
    }
  </ul>
}
<p class="button-55">@Html.ActionLink("Add new treat", "Create")</p>